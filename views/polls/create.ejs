<!doctype html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
</head>
<body>
  <% include ../components/navbar %>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <!-- LOGIN FORM -->
    <form action="/polls/create" method="post">
      <input type="hidden" name="_csrf" value="<%=csrftoken%>" />
        <div class="form-group">
            <label>Name your poll </label>
            <input type="text" class="form-control" name="text" placeholder="Who's the best ?">
        </div>
        <label class="control-label">Options</label>
        <fieldset id="options">
          <div class="form-group">
              <input type="text" class="form-control" name="choiceText" placeholder="You are the best" required>
          </div>
          <div class="form-group">
              <input type="text" class="form-control" name="choiceText" placeholder="I am the best" required>
          </div>
        </fieldset>
        <div class="form-group col-md-6 col-md-offset-3">
          <button type="button" id="more-choices" class="btn btn-default btn-block">More options</button>
          <button type="submit" class="btn btn-warning btn-block">Create poll</button>
        </div>
    </form>
</div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
  $('#more-choices').on('click', function(){
    $('#options').append('<div class="form-group">\
                      <input type="text" class="form-control"\
                             name="choiceText" placeholder="My other choice">\
                    </div>')
  });
</script>
</body>
</html>
